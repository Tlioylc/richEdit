<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:background="@drawable/windows_bg">
    <ImageView
        android:id="@+id/custom_image_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/custom_image_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff">
        <ProgressBar
            android:id="@+id/custom_image_progress"
            android:layout_centerInParent="true"
            android:layout_width="48dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/custom_image_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:text="点击重试"
            android:visibility="gone"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/custom_image_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/image_delete"/>

</RelativeLayout>