<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="#1Affffff">

    <TextView
        android:id="@+id/icon_lianjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_shequ_lianjie"
        android:textColor="@color/font2"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"/>


    <TextView
        android:id="@+id/text_url"
        android:layout_toRightOf="@+id/icon_lianjie"
        android:layout_toLeftOf="@+id/custom_url_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/font2"
        android:textSize="@dimen/type2"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"/>
    <ImageView
        android:id="@+id/custom_url_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/image_delete"/>

</RelativeLayout>